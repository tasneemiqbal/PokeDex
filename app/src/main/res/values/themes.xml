<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeDex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1B5320</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/roboto_mono_bold</item>
        <item name="android:background">@color/yellow</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TextAppearance.Quote" parent = "TextAppearance.MaterialComponents.Body1">
        <item name = "android:textColor">#1B5320</item>
        <item name = "android:textSize">22sp</item>
        <item name = "android:textStyle">bold</item>
    </style>


</resources>